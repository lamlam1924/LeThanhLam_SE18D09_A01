<Window x:Class="LeThanhLamWPF.Views.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeThanhLamWPF.Views"
        mc:Ignorable="d"
         Title="FU Mini Hotel System - Customer Panel" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20,10">
            <Grid>
                <TextBlock x:Name="WelcomeTextBlock" 
                          Foreground="White" FontSize="18" FontWeight="Bold"
                          VerticalAlignment="Center"/>
                <Button Content="Logout" Click="LogoutButton_Click"
                        HorizontalAlignment="Right" Padding="15,5"
                        Background="#e74c3c" Foreground="White" BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Profile Tab -->
            <TabItem Header="My Profile">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Personal Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Full Name:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="FullNameTextBlock" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="EmailTextBlock" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Phone:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PhoneTextBlock" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Birthday:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="BirthdayTextBlock" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Customer ID:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="CustomerIDTextBlock" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <Button Content="Update Profile" Click="UpdateProfileButton_Click"
                                Width="150" Height="40" Margin="0,0,0,10"
                                Background="#3498db" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Booking Tab -->
            <TabItem Header="Book a Room">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Book Your Stay" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                        <TextBlock Text="Find and book available rooms for your desired dates." 
                                  FontSize="16" Margin="0,0,0,30"/>

                        <Button Content="Make a New Booking" Click="NewBookingButton_Click"
                                Width="200" Height="50" HorizontalAlignment="Left"
                                Background="#27ae60" Foreground="White" BorderThickness="0"
                                FontSize="16"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Booking History Tab -->
            <TabItem Header="Booking History">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Your Booking History" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                        <TextBlock Text="View and manage your current and past bookings." 
                                  FontSize="16" Margin="0,0,0,30"/>

                        <Button Content="View Booking History" Click="ViewBookingHistoryButton_Click"
                                Width="200" Height="50" HorizontalAlignment="Left"
                                Background="#3498db" Foreground="White" BorderThickness="0"
                                FontSize="16"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
