<Window x:Class="LeThanhLamWPF.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeThanhLamWPF.Views"
        mc:Ignorable="d"
        Title="Customer Dialog" Height="500" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Full Name:" FontWeight="SemiBold"/>
            <TextBox x:Name="FullNameTextBox" Height="30" Margin="0,0,0,10"/>

            <Label Content="Email:" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailTextBox" Height="30" Margin="0,0,0,10"/>

            <Label Content="Phone:" FontWeight="SemiBold"/>
            <TextBox x:Name="PhoneTextBox" Height="30" Margin="0,0,0,10"/>

            <Label Content="Birthday:" FontWeight="SemiBold"/>
            <DatePicker x:Name="BirthdayDatePicker" Height="30" Margin="0,0,0,10"/>

            <Label Content="Password:" FontWeight="SemiBold"/>
            <TextBox x:Name="PasswordTextBox" Height="30" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="80" Height="35" Margin="0,0,10,0"
                    Background="#27ae60" Foreground="White" BorderThickness="0"
                    Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Height="35"
                    Background="#95a5a6" Foreground="White" BorderThickness="0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>

</Window>
