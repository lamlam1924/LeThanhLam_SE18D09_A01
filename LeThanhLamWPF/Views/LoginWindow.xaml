<Window x:Class="LeThanhLamWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FU Mini Hotel System - Login" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#eaf6fb" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Logo or illustration -->
        <Border Grid.Column="0" Background="#3498db" CornerRadius="0,20,20,0" Margin="0,40,434,40" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Ellipse Width="90" Height="90" Fill="White" Margin="0,0,0,20">
                    <Ellipse.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#2980b9" Opacity="0.3"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock Text="FU Mini Hotel" Foreground="White" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Welcome Back!" Foreground="White" FontSize="16" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Right: Login form -->
        <Border Background="White" CornerRadius="20" Margin="10,40,0,40" Padding="40" Grid.Column="1">
            <StackPanel Width="300">
                <TextBlock Text="Sign In" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Label Content="Email" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,5"/>
                <Border CornerRadius="8" BorderBrush="#3498db" BorderThickness="1.5" Background="#f4f8fb" Margin="0,0,0,15">
                    <TextBox x:Name="EmailTextBox" Height="36" Padding="10,6" FontSize="13"
                             Background="Transparent" BorderThickness="0"/>
                </Border>

                <Label Content="Password" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,5"/>
                <Border CornerRadius="8" BorderBrush="#3498db" BorderThickness="1.5" Background="#f4f8fb" Margin="0,0,0,25">
                    <PasswordBox x:Name="PasswordBox" Height="36" Padding="10,6" FontSize="13"
                                 Background="Transparent" BorderThickness="0"/>
                </Border>

                <Border CornerRadius="8" Background="#3498db" Margin="0,0,0,15">
                    <Button Content="LOGIN"
                            Click="LoginButton_Click"
                            Height="40"
                            Background="Transparent" Foreground="White"
                            FontSize="15" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
